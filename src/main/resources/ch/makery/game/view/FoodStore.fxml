<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="450.0" prefWidth="800.0" styleClass="background" stylesheets="@FoodStoreStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.game.view.FoodStoreController">
   <children>
      <VBox layoutX="14.0" layoutY="-50.0" prefHeight="450.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="37.0" prefWidth="800.0">
               <children>
                  <Label prefHeight="53.0" prefWidth="647.0" styleClass="main-label" text="FOOD STORE" />
                  <Label text="Click on the food image to purchase your food!">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="127.0" prefWidth="250.0" spacing="20.0" styleClass="hBox">
                     <children>
                        <Label styleClass="money-label" text="Money">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="moneyLabel" prefHeight="22.0" prefWidth="99.0" styleClass="money-label" text="Label" />
                     </children>
                     <VBox.margin>
                        <Insets left="250.0" right="250.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="250.0" prefWidth="800.0" spacing="50.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Button fx:id="firstFoodItem" contentDisplay="TOP" mnemonicParsing="false" onAction="#buyFood">
                                 <graphic>
                                    <ImageView fx:id="firstFoodImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                                 </graphic>
                              </Button>
                              <Label fx:id="firstFoodPrice" text="Label" />
                              <Label fx:id="firstFoodEnergy" text="Label" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Button fx:id="secondFoodItem" contentDisplay="TOP" mnemonicParsing="false" onAction="#buyFood">
                                 <graphic>
                                    <ImageView fx:id="secondFoodImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                                 </graphic>
                              </Button>
                              <Label fx:id="secondFoodPrice" text="Label" />
                              <Label fx:id="secondFoodEnergy" text="Label" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Button fx:id="thirdFoodItem" contentDisplay="TOP" mnemonicParsing="false" onAction="#buyFood">
                                 <graphic>
                                    <ImageView fx:id="thirdFoodImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                                 </graphic>
                              </Button>
                              <Label fx:id="thirdFoodPrice" text="Label" />
                              <Label fx:id="thirdFoodEnergy" text="Label" />
                           </children>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#goBack" prefHeight="50.0" prefWidth="100.0" styleClass="goBack-button" text="Go Back" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

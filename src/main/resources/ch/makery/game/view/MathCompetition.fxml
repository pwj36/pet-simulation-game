<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="450.0" prefWidth="800.0" styleClass="background" stylesheets="@MathCompetitionStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.game.view.MathCompetitionController">
   <children>
      <VBox prefHeight="450.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label styleClass="main-label" text="MATH COMPETITION" />
               </children>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </VBox>
            <VBox prefHeight="85.0" prefWidth="800.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="800.0" spacing="15.0">
                     <children>
                        <Label fx:id="number1" text="Label" />
                        <Label fx:id="operator" text="Label" />
                        <Label fx:id="number2" text="Label" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
               <children>
                  <TextField fx:id="answer" promptText="Enter your answer">
                     <VBox.margin>
                        <Insets left="300.0" right="300.0" />
                     </VBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#validateAnswer" prefHeight="40.0" styleClass="submit-button" text="Submit Answer" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="800.0">
               <children>
                  <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#goBackHome" prefHeight="40.0" text="Go Back Home" />
                        <Button mnemonicParsing="false" onAction="#showWorkRules" prefHeight="40.0" text="How to Work?" />
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
